---
import { ui } from "../i18n/ui.js";
const locale = (Astro.locals.lang as "en" | "fr") ?? "en";
---

<div class="navbar bg-base-200 shadow-md mb-4">
    <div class="navbar-start">
        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost lg:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path></svg
                >
            </label>
            <ul
                tabindex="0"
                class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
            >
                <li><a href="/">{ui[locale].nav.home}</a></li>
                <li><a href="/generate">{ui[locale].nav.generator}</a></li>
                <li><a href="/gallery">{ui[locale].nav.gallery}</a></li>
            </ul>
        </div>
        <a href="/" class="btn btn-ghost normal-case text-xl">SVG Generator</a>
    </div>
    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            <li><a href="/">{ui[locale].nav.home}</a></li>
            <li><a href="/generate">{ui[locale].nav.generator}</a></li>
            <li><a href="/gallery">{ui[locale].nav.gallery}</a></li>
        </ul>
    </div>
    <div class="navbar-end gap-2">
        <a href="/login" class="btn btn-ghost">{ui[locale].nav.login}</a>
        <a href="/signup" class="btn btn-ghost">{ui[locale].nav.signup}</a>
        <form method="POST" action="/api/logout" class="m-0">
            <button type="submit" class="btn btn-primary"
                >{ui[locale].nav.logout}</button
            >
        </form>
        <div class="dropdown dropdown-end z-10">
            <label tabindex="0" class="btn btn-sm btn-ghost m-1">
                {ui[locale].nav.language}
                <span class="badge badge-sm">{locale.toUpperCase()}</span>
            </label>
            <form
                method="POST"
                action={Astro.url.pathname}
                class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52"
            >
                <ul>
                    <li>
                        <button
                            name="language"
                            value="en"
                            class="btn btn-ghost btn-sm justify-start"
                            >English</button
                        >
                    </li>
                    <li>
                        <button
                            name="language"
                            value="fr"
                            class="btn btn-ghost btn-sm justify-start"
                            >Fran√ßais</button
                        >
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>
