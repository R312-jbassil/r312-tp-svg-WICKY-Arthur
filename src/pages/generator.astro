---
import Layout from "../layouts/Layout.astro";
import Menu from "../Components/Menu.astro";
---

<Layout title="SVG Generator">
    <Menu />
    <main class="container mx-auto p-4">
        <div class="flex flex-col lg:flex-row gap-4">
            <div class="card bg-base-100 shadow-xl flex-1">
                <div
                    class="card-body flex items-center justify-center min-h-[400px]"
                >
                    <div
                        id="svgPreview"
                        class="flex items-center justify-center"
                    >
                    </div>
                </div>
            </div>

            <div class="card bg-neutral text-neutral-content flex-1">
                <div class="card-body">
                    <pre
                        id="svgCode"
                        class="text-xs overflow-auto p-2 max-h-[400px]">
                    </pre>
                </div>
            </div>
        </div>
        <div class="mt-6">
            <form id="generatorForm" class="form-control w-full">
                <div class="flex gap-2">
                    <input
                        type="text"
                        id="promptInput"
                        placeholder="Enter your SVG description (e.g., car, house, tree)"
                        class="input input-bordered flex-1"
                    />
                    <button
                        type="submit"
                        id="generateBtn"
                        class="btn btn-primary">Generate</button
                    >
                </div>
            </form>
        </div>
    </main>
</Layout>
